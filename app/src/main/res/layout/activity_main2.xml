<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app3.android.test.calcproject.MainActivity2"
    android:background="#FEF7F0">


   <TextView
       android:layout_width="match_parent"
       android:layout_height="120dp"
       android:text="0"
       android:textSize="30dp"
       android:typeface="monospace"
       android:gravity="right"
       android:paddingRight="10dp"
       android:id="@+id/textView"
       android:maxLength="50"

       />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1,2,3">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:onClick="onClick"
                android:text="AC"
                android:background="#D0B3D7"
                android:layout_margin="2dp"
                android:textSize="15pt"
                android:textColor="#FFFFFF"
                />

            <Button
                android:id="@+id/del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="←"
                android:onClick="onClick"
                android:background="#D0B3D7"
                android:layout_margin="2dp"
                android:textSize="15pt"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="÷"
                android:background="#AAC4DC"
                android:layout_margin="2dp"
                android:textSize="15pt"
                android:textColor="#FFFFFF"/>
        </TableRow>

       <TableRow android:layout_weight="1">

           <Button
               android:id="@+id/no7"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:onClick="onClick"
               android:text="7"
               android:background="#FEE6EF"
               android:layout_margin="2dp"
               android:textSize="15pt"/>
           <Button
               android:id="@+id/no8"
               android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:onClick="onClick"
               android:text="8"
               android:background="#FEE6EF"
               android:layout_margin="2dp"
               android:textSize="15pt"/>
           <Button
               android:id="@+id/no9"
               android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:onClick="onClick"
               android:text="9"
               android:background="#FEE6EF"
               android:layout_margin="2dp"
               android:textSize="15pt"/>
           <Button
               android:id="@+id/mul"
               android:onClick="onClick"
               android:layout_height="match_parent"
               android:layout_width="match_parent"
               android:text="×"
               android:background="#AAC4DC"
               android:layout_margin="2dp"
               android:textSize="15pt"
               android:textColor="#FFFFFF"/>
       </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/no4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:onClick="onClick"
                android:background="#FEE6EF"
                android:layout_margin="2dp"
                android:textSize="15pt"/>
            <Button
                android:id="@+id/no5"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="5"
                android:onClick="onClick"
                android:background="#FEE6EF"
                android:layout_margin="2dp"
                android:textSize="15pt"/>
            <Button
                android:id="@+id/no6"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="6"
                android:onClick="onClick"
                android:background="#FEE6EF"
                android:layout_margin="2dp"
                android:textSize="15pt"/>
            <Button
                android:id="@+id/sub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:onClick="onClick"
                android:background="#AAC4DC"
                android:layout_margin="2dp"
                android:textSize="15pt"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/no1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="1"
                android:onClick="onClick"
                android:background="#FEE6EF"
                android:layout_margin="2dp"
                android:textSize="15pt"/>
            <Button
                android:id="@+id/no2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="2"
                android:onClick="onClick"
                android:background="#FEE6EF"
                android:layout_margin="2dp"
                android:textSize="15pt"/>
            <Button
                android:id="@+id/no3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:onClick="onClick"
                android:background="#FEE6EF"
                android:layout_margin="2dp"
                android:textSize="15pt"/>
            <Button
                android:id="@+id/add"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="+"
                android:onClick="onClick"
                android:background="#AAC4DC"
                android:layout_margin="2dp"
                android:textSize="15pt"
                android:textColor="#FFFFFF"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/no0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:text="0"
                android:background="#FEE6EF"
                android:layout_margin="2dp"
                android:textSize="15pt"/>
            <!--<Button
                android:id="@+id/point"
                android:text="."
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:onClick="onClick"/>-->
            <Button
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="="
                android:layout_span="3"
                android:onClick="onClick"
                android:background="#FE595C"
                android:layout_margin="2dp"
                android:textSize="15pt"
                android:textColor="#FFFFFF"/>


        </TableRow>




    </TableLayout>



</LinearLayout>
